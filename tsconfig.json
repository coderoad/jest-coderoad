{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noEmit": false,
        "outDir": "lib"
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "filesGlob": [
        "src/*.ts",
        "src/**/*.ts",
        "src/typings/**/*.d.ts"
    ],
    "files": [
    ],
    "exclude": [
        "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
